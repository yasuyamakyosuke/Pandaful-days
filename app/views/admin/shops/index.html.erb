<div class ="container">
  <div class ="row">
    <h2>パン屋一覧</h2>
  </div>
  <div class ="row">
    <table class ='table table-striped'>
      <thead>
        <tr>
   	      <th>ShopID</th>
   	      <th>店名</th>
   	      <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @shops.each do |shop| %>
        <tr>
          <td><%= shop.id %></td>
          <td><%= link_to shop.shop_name, admin_shop_path(shop.id) %></td>
          <td><% if shop.shop_quit %></td>
                <div>有効</div>
              <% else %>
                <div>無効</div>
              <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to "新規登録", new_admin_shop_path,class: "btn btn-primary",data: { "turbolinks"=> false }  %>
</div>
