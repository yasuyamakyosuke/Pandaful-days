<div class ="container">
  <div class ="row">
    <h2>User一覧ページ</h2>
    <table class ='table table-striped'>
      <thead>
        <tr>
   	      <th>会員ID</th>
   	      <th>氏名</th>
   	      <th>メールアドレス</th>
   	      <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
   	      <td><%= user.id %></td>
   	      <td><%= link_to user.name, admin_user_path(user.id) %></td>
   	      <td><%= user.email %></td>
   	      <td><% if user.quit %>
   		        <h4>有効</h4>
   		        <% else %>
   		        <h4>退会済み</h4>
   		        <% end %>
   	      </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>